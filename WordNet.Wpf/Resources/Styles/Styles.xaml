<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:WordNet.Wpf.Controls">
    <Style TargetType="{x:Type c:Loading}">
        <Setter Property="Stroke" Value="{DynamicResource MahApps.Brushes.Accent2}" />
        <Setter Property="StoryboardKey" Value="{x:Static c:LoadingAnimation.WithPause}" />
    </Style>

    <Style TargetType="{x:Type icon:PackIconMaterial}">
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>